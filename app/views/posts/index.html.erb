<p id="notice"><%= notice %></p>
<% @title="Know Your Operating System" %>
<h1><h1>
<table width='100%'>
  <thead>
    <tr>
      <th><center>Tips And Tricks For Your Operating System</center></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <% if post.user == current_user %>
        <td><%= link_to post.title, post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% else %>
        <td colspan="2"><%= link_to post.title, post %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>
<table>
  <tbody>
      <tr>
        <td>
          <%= will_paginate @posts, inner_window: 2, outer_windows: 2 %>
        </td>
      </tr>
  </tbody>
</table>

