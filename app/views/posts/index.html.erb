<%- model_class = Post -%>
<% @title="Know Your Operating System" %>
<div class="page-header">
  
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><center>Tips And Tricks For Your Operating System</center></th>
      <th>
      <%=t '.actions', :default => t("helpers.     ") %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= link_to post.title, post_path(post) %></td>
        <td>
          <% if post.user == current_user %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_post_path(post), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<table>
  <tbody>
      <tr>
        <td>
          <%= will_paginate @posts, inner_window: 2, outer_windows: 2 %>
        </td>
      </tr>
  </tbody>
</table>